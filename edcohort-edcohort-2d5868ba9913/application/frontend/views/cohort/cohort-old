<script type="text/javascript"><!--
    function doAction(val){
        //Forward browser to new url
		 var course_type = $('#course_type').val();
		 var getclass = $('#getclass').val();
        window.location= base_url+'cohort/' +val+'?course_type='+course_type+'&class='+getclass+'';
    }
	
	 function doReviweTypeAction(val){
        //Forward browser to new url brand course
		 var course_type = $('#course_type').val();
		 var getclass = $('#getclass').val();
		 var brand = $('#brand').val();
		 var course = $('#course').val();
        window.location= base_url+'cohort/' +brand+'?brand='+brand+'&course='+course+'&course_type='+course_type+'&class='+getclass+'&cohort_type='+val+'';
    }
	
	function productcohort(){   

    // alert();  
	 //$(".alert-outline-success").hide();
     //$("#text-message-success").html(''); 


        var value_form = $('#product_cohort').serialize();

       // var formData = new FormData($("#product_cohort")[0]);

          $.ajax({
            url: base_url+'cohort-submit',
            dataType: 'json',
            type: 'post',            
            data: value_form,                                         
            success: function(data){             
                 if(data.status=='1')
                 {  
                     $(".reg-message-success").show();
                      $("#text-message-success").html(data.message);                   
                     setTimeout(function() {
                      $(".reg-message-success").hide();
                      $("#text-message-success").html('');
                      $(".reg-message-success").hide('blind', {}, 500)
                  }, 5000);                 
                 }
                 else if(data.status=='0')
                 {  
                    $(".reg-message-error").show();              
                    $("#text-message-error").html(data.message);
                    setTimeout(function() {
                       $(".reg-message-error").hide();              
                       $("#text-message-error").html('');
                      $(".reg-message-error").hide('blind', {}, 500)
                  }, 5000); 
                 }            
            },
            beforeSend: function () {
                $("#global-loader").show();
                $("#body").addClass('opacity-body');
            },
            complete: function () {
                $("#global-loader").hide();
                $("#body").removeClass('opacity-body');
            } 

        });                 
        
	}
	
	function productcohortLike(cohort_id,user_id,action){   

    // alert(cohort_id+' '+user_id);  
	 //$(".alert-outline-success").hide();
     //$("#text-message-success").html(''); 


        //var value_form = $('#product_cohort').serialize();

          $.ajax({
            url: base_url+'cohort-like',
            dataType: 'json',
            type: 'post',            
            data: {cohort_id: cohort_id,user_id:user_id,action:action},                                        
            success: function(data){             
                 if(data.status=='1')
                 {  
                   // alert('1'); 
				   location.reload();                 
                 }
                 else if(data.status=='0')
                 {
					//alert('0'); 
				 }            
            },
            beforeSend: function () {
                $("#global-loader").show();
                $("#body").addClass('opacity-body');
            },
            complete: function () {
                $("#global-loader").hide();
                $("#body").removeClass('opacity-body');
            } 

        });                 
        
	}
	
	function productcohortReply(id){   

    // alert();  
	 //$(".alert-outline-success").hide();
     //$("#text-message-success").html(''); 


        var value_form = $('#product_cohort_reply_'+id).serialize();

          $.ajax({
            url: base_url+'cohort-reply-submit',
            dataType: 'json',
            type: 'post',            
            data: value_form,                                         
            success: function(data){             
                 if(data.status=='1')
                 {  
                     $("#reg-message-success_"+id).show();
                      $("#text-message-success_"+id).html(data.message);                   
                     setTimeout(function() {
                      $("#reg-message-success_"+id).hide();
                      $("#text-message-success_"+id).html('');
                      $("#reg-message-success_"+id).hide('blind', {}, 500)
                  }, 5000);                 
                 }
                 else if(data.status=='0')
                 {  
                    $("#reg-message-error_"+id).show();              
                    $("#text-message-error_"+id).html(data.message);
                    setTimeout(function() {
                       $("#reg-message-error_"+id).hide();              
                       $("#text-message-error_"+id).html('');
                      $("#reg-message-error_"+id).hide('blind', {}, 500)
                  }, 5000); 
                 }            
            },
            beforeSend: function () {
                $("#global-loader").show();
                $("#body").addClass('opacity-body');
            },
            complete: function () {
                $("#global-loader").hide();
                $("#body").removeClass('opacity-body');
            } 

        });                 
        
	}
	
	function divShow(val){
        //Forward browser to new url
		if($('#commentDiv_'+val).css('display') == 'none')
		{
			$('#commentDiv_'+val).css('display', 'block');
		}else{
			$('#commentDiv_'+val).css('display', 'none');
			}
        
    }
	
	function productcohortReadMore(val){
        //Forward browser to new url
		 $("#cohortShort_"+val).hide();
		 $("#cohortFull_"+val).show();
        
    }
	function productcohortReadShort(val){
        //Forward browser to new url
		$("#cohortFull_"+val).hide();
		$("#cohortShort_"+val).show();
        
    }

    function productcohortReplyReadMore(val){
        //Forward browser to new url
		 $("#cohortReplyShort_"+val).hide();
		 $("#cohortReplyFull_"+val).show();
        
    }
	function productcohortReplyReadShort(val){
        //Forward browser to new url
		$("#cohortReplyFull_"+val).hide();
		$("#cohortReplyShort_"+val).show();
        
    }
	
	function boostcohort(){   

    // alert();  
	 //$(".alert-outline-success").hide();
     //$("#text-message-success").html(''); 


        var value_form = $('#boostPopup').serialize();

          $.ajax({
            url: base_url+'boost-cohort-submit',
            dataType: 'json',
            type: 'post',            
            data: value_form,                                         
            success: function(data){             
                 if(data.status=='1')
                 {  
                     $(".boost-message-success").show();
                      $("#text-message-boost-success").html(data.message);                   
                     setTimeout(function() {
                      $(".boost-message-success").hide();
                      $("#boost-message-success").html('');
                      $(".boost-message-success").hide('blind', {}, 500);
					  $('#cohortModal').modal('hide');
                  }, 5000);                 
                 }
                 else if(data.status=='0')
                 {  
                    $(".boost-message-error").show();              
                    $("#text-message-boost-error").html(data.message);
                    setTimeout(function() {
                       $(".boost-message-error").hide();              
                       $("#boost-message-error").html('');
                      $(".boost-message-error").hide('blind', {}, 500);
					 // $('#cohortModal').modal('hide');
                  }, 5000); 
                 }            
            },
            beforeSend: function () {
                $("#global-loader").show();
                $("#body").addClass('opacity-body');
            },
            complete: function () {
                $("#global-loader").hide();
                $("#body").removeClass('opacity-body');
            } 

        });                 
        
	}
</script> 